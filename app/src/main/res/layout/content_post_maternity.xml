<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Challenges.PostMaternityActivity"
    tools:showIn="@layout/activity_post_maternity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_postMName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp">

                    <EditText
                        android:id="@+id/postMName"
                        android:layout_weight="0.6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/txt_chaName"
                        android:inputType="text"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:orientation="vertical"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:text="@string/txt_height"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textSize="15dp"
                        android:gravity="center_vertical" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <com.vi.swipenumberpicker.SwipeNumberPicker
                            android:id="@+id/snppostM0"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:snp_numberColor="@android:color/white"
                            app:snp_arrowColor="@android:color/white"
                            app:snp_backgroundColor="@color/colorAccent"
                            app:snp_max="200"
                            app:snp_min="1"
                            app:snp_value="100"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text="@string/txt_weight"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textSize="15dp"
                        android:gravity="center_vertical" />

                    <com.vi.swipenumberpicker.SwipeNumberPicker
                        android:id="@+id/snppostM2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:snp_numberColor="@android:color/white"
                        app:snp_arrowColor="@android:color/white"
                        app:snp_backgroundColor="@color/colorAccent"
                        app:snp_max="200"
                        app:snp_min="1"
                        app:snp_value="60"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text="@string/txt_size"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textSize="15dp"
                        android:gravity="center_vertical" />

                    <com.vi.swipenumberpicker.SwipeNumberPicker
                        android:id="@+id/snppostM3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:snp_numberColor="@android:color/white"
                        app:snp_arrowColor="@android:color/white"
                        app:snp_backgroundColor="@color/colorAccent"
                        app:snp_max="100"
                        app:snp_min="1"
                        app:snp_value="30"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text="Target Waist Size (cm)"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textSize="15dp"
                        android:gravity="center_vertical" />

                    <com.vi.swipenumberpicker.SwipeNumberPicker
                        android:id="@+id/snppostM4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:snp_numberColor="@android:color/white"
                        app:snp_arrowColor="@android:color/white"
                        app:snp_backgroundColor="@color/colorAccent"
                        app:snp_max="50"
                        app:snp_min="1"
                        app:snp_value="30"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp">

                    <Spinner
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:background="@color/calendar_selected_date_text"
                        android:id="@+id/postMdate"></Spinner>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">

                        <ImageButton
                            android:id="@+id/postMsetAlarm"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Set Alarm"
                            android:src="@drawable/alarm"
                            android:background="@null"
                            android:clickable="true"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.8"
                    android:layout_marginTop="15dp">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_postMdescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="5dp">

                        <EditText
                            android:id="@+id/postMdescription"
                            android:layout_weight="0.6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Add your thoughts"
                            android:inputType="text"/>

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent">

                    <info.hoang8f.widget.FButton
                        android:id="@+id/postM_submit_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|top"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:minHeight="50dp"
                        android:minWidth="120dp"
                        android:text="@string/txt_btn_submit"
                        android:textColor="@android:color/white"
                        fbutton:buttonColor="@color/fbutton_color_peter_river"
                        fbutton:shadowEnabled="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent">

                    <info.hoang8f.widget.FButton
                        android:id="@+id/postMcancel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="20dp"
                        android:minHeight="50dp"
                        android:minWidth="120dp"
                        android:text="Cancel"
                        android:textColor="@android:color/white"
                        fbutton:buttonColor="@color/fbutton_color_peter_river"
                        fbutton:shadowEnabled="true" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
