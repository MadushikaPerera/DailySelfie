<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp">

    <LinearLayout
       android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/topPostmodel"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="72dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_weight="1"
                android:layout_margin="10dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image_activity"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:src="@drawable/dill"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/white"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/activity_username"
                    android:textColor="@android:color/black"
                    android:paddingTop="16dp"
                    android:textSize="20sp"
                    android:text="Tharaka Romesh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"  />

                <TextView
                    android:id="@+id/activity_fitnesstype"
                    android:paddingBottom="6dp"
                    android:textSize="18sp"
                    android:text="Fitness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>






        </LinearLayout>


        <ImageView
            android:id="@+id/activity_image"
            android:background="#CFD8DC"
            android:src="@drawable/dill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/activity_but1"
                android:text="Like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/activity_but2"
                android:text="share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>



    </LinearLayout>




</android.support.v7.widget.CardView>