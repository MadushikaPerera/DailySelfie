<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerFitness"
    tools:context="com.sliit.dailyselfie.FitnessActivity">

 <LinearLayout
     android:padding="16dp"
     android:orientation="vertical"
     android:layout_width="match_parent"
     android:layout_height="match_parent">


    <TextView
        android:id="@+id/infohedding"
        android:text="@string/txt_fitnesstype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        />

    <TextView
        android:id="@+id/lbl_fitnesstype"
        android:layout_marginTop="20dp"
        android:layout_below="@id/infohedding"
        android:text="@string/txt_fitnesstype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:id="@+id/fitnessradioGroup"
        android:layout_marginTop="20dp"
        android:layout_below="@id/lbl_fitnesstype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:text="@string/txt_fitnesstyperadio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:text="@string/txt_fitnesstyperadio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RadioGroup>


    <EditText
        android:id="@+id/edt_height"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lbl_height"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="@string/txt_height"/>


    <EditText
        android:id="@+id/edt_weight"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lbl_weight"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="@string/txt_weight"/>


    <EditText
        android:id="@+id/edt_targetw"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lbl_targetw"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="@string/txt_targetw"/>


    <EditText
        android:id="@+id/edt_timep"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lbl_timep"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="@string/txt_timeP"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_btn_submit"
        android:id="@+id/fit_submit_btn"
        android:layout_below="@+id/edt_timep"
        android:layout_alignRight="@+id/edt_timep"
        android:layout_alignEnd="@+id/edt_timep"
        android:layout_marginTop="43dp" />

     <Button
         android:text="open Nav"
         android:id="@+id/opennav"
         android:onClick=""
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />

 </LinearLayout>




    <include layout="@layout/include_nav_drawer"/>

</android.support.v4.widget.DrawerLayout>
